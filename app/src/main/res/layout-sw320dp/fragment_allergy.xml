<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="creativeendlessgrowingceg.allergychecker.fragment.MyAllergies">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/linlayoutFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ProgressBar
                android:id="@+id/progressBarAllergy"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:text="@string/uncheckAll"
                android:textAllCaps="false"
                android:textColor="@color/fontColorTextWhite"
                android:textSize="32sp"
                android:fontFamily="@font/yatra"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
