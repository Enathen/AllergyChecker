<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/historyFragment"
    tools:context="creativeendlessgrowingceg.allergychecker.HistoryFragment">
    <ScrollView
        android:id="@+id/scrollViewFragmentHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lineaLayoutFragHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonHistoryFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="@string/save"
                android:textColor="@color/fontColorTextWhite"
                android:textSize="32sp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
