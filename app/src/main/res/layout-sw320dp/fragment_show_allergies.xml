<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creativeendlessgrowingceg.allergychecker.fragment.ShowAllergies">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/showAllergiesLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbShowAllergies"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewAllergiesFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noAllergies"
                android:textAlignment="center"
                android:fontFamily="@font/yatra"
                android:textColor="@color/colorFont"
                android:textSize="30sp"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>
