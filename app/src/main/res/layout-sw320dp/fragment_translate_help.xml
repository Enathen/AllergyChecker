<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creativeendlessgrowingceg.allergychecker.fragment.TranslateHelp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:text="@string/sendTips"
            android:textColor="@color/fontColorTextWhite"

            android:textSize="32sp" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linlayoutFragTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearhorizontalFragTransHelp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sideFragTranslate"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:backgroundTint="@color/fontColorTextWhite" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/onlyFillChanges"
                        android:textAlignment="center"
                        android:textColor="@color/fontColorTextWhite"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/sideFragTranslate2"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:backgroundTint="@color/fontColorTextWhite" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarTranslate"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
