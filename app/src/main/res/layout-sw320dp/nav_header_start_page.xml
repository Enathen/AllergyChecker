<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"

    android:background="@drawable/gradient"

    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/LinLayHorNavHeadStartPage"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageViewNav1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageViewNav2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageViewNav3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageViewNav4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="0.15" />

        <ImageView
            android:id="@+id/imageViewNav5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="0.15" />

        <ImageView
            android:id="@+id/imageViewNav6"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_gravity="bottom"
            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="0.15" />

        <ImageView
            android:id="@+id/imageViewNav7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="0.15" />

        <ImageView
            android:id="@+id/imageViewNav8"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_gravity="bottom"
            app:srcCompat="@drawable/emptyborder" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"

            android:layout_weight="0.15" />

    </LinearLayout>

</LinearLayout>
