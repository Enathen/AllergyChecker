<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linHorRowLang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultRows"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageViewRowLanguage"
            android:layout_width="@dimen/defaultRows"
            android:layout_height="@dimen/defaultRows"
            app:srcCompat="@drawable/globe" />

        <TextView
            android:id="@+id/textViewRowLanguage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.90"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/fontColorTextWhite"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/imageViewRowCategory"
            app:layout_constraintRight_toLeftOf="@+id/checkBoxRowCategory"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewDropDownLanguage"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:onClick="onclickDropDownList"
            app:srcCompat="@drawable/dropdownlist" />
    </LinearLayout>
</LinearLayout>