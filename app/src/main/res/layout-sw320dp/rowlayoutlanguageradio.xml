<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/defaultRows"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewRadio"
        android:layout_width="38dp"
        android:layout_height="@dimen/defaultRows"
        android:layout_marginStart="@dimen/defaultRows"
        android:layout_weight="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/allergychecker" />

    <TextView
        android:id="@+id/textViewRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.48"
        android:text="TextView"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imageViewRowCategory"
        app:layout_constraintRight_toLeftOf="@+id/checkBoxRowCategory"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButtonLanguage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/defaultRows"
        android:layout_marginEnd="2dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        />

</LinearLayout>