<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sideBorder"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:text="TextView"
            android:textColor="@color/fontColorTextWhite"
            android:textSize="30sp"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <EditText
            android:id="@+id/editTextFragmentTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/fontColorTextWhite"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="300"
            android:textColor="@color/fontColorTextWhite" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sideBorder1"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>