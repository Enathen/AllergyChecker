<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="100dp"
    >


    <LinearLayout
        android:id="@+id/linearLayoutRowCategoryHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultRows"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageViewRowCategory"
            android:layout_width="65dp"
            android:layout_height="@dimen/defaultRows"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/allergychecker" />

        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.48"
            android:text="TextView"
            android:textColor="@color/fontColorTextWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/imageViewRowCategory"
            app:layout_constraintRight_toLeftOf="@+id/checkBoxRowCategory"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dropDownList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:onClick="onclickDropDownList"
            app:srcCompat="@drawable/dropdownlist" />

        <CheckBox
            android:id="@+id/checkBoxRowCategory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/defaultRows"
            android:layout_marginRight="8dp"

            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:scaleX="2"
            android:scaleY="2"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>