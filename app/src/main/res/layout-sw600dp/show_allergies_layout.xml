<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/showAllergiesLanguage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFlag"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/gb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewStaticLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="English"
                android:textAlignment="textStart"
                android:textColor="@color/fontColorTextWhite"
                android:textSize="32sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewLocaleLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Engelska"
                android:textColor="@color/fontColorTextWhite"
                android:textSize="32sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewAllergicAgainst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/fontColorTextWhite"
        android:textSize="36sp" />

</LinearLayout>