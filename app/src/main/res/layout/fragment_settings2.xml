<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creativeendlessgrowingceg.allergychecker.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBarSettings"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/linearCardSettingsWarnings"
                android:visibility="gone"
                layout="@layout/linear_card" />
            <include
                android:id="@+id/linearCardSettingsFoundAllergies"
                android:visibility="gone"
                layout="@layout/linear_card" />
            <include
                android:id="@+id/linearCardSettingsFoundENumbers"
                android:visibility="gone"
                layout="@layout/linear_card" />
            <include
                android:id="@+id/linearCardSettingsScannedText"
                android:visibility="gone"
                layout="@layout/linear_card" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
